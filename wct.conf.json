{
  "suites": ["test/unit"],
  "plugins": {
    "local": {
      "browserOptions": {
        "chrome": [
          "headless",
          "disable-gpu"
        ],
        "firefox": [
          "-headless"
        ]
      }
    },
    "istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/*.js"
      ],
      "exclude": [
        "/polymer/polymer.js",
        "/platform/platform.js"
      ]
    }
  }
}
