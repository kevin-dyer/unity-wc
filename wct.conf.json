{
  "suites": ["test/unit"],
  "plugins": {
    "local": {
      "browserOptions": {
        "chrome": [
          "-headless",
          "-disable-gpu"
        ],
        "firefox": [
          "-headless"
        ]
      }
    },
    "istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "/*.html"
      ],
      "exclude": [
        "/polymer.json"
      ]
    }
  }
}
